<RapidFit>

	//================================================
	// Formal Parameters to be fitted or fixed

	<ParameterSet>

		<PhysicsParameter>
			<Name>Fraction1</Name>
			<Value>0.5</Value>
			<Minimum>0.0</Minimum>
			<Maximum>1.0</Maximum>
			<Type>Free</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		//Fraction of signal in total sample
		<PhysicsParameter>
			<Name>Fraction2</Name>
			<Value>0.5</Value>
			<Minimum>0.0</Minimum>
			<Maximum>1.0</Maximum>
			<Type>Free</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>Fraction3</Name>
			<Value>0.66</Value>
			<Minimum>0.</Minimum>
			<Maximum>1.</Maximum>
			<Type>Free</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		// Mass

		<PhysicsParameter>
			<Name>f_sig_m1</Name>
			<Value>0.803</Value>
			<Minimum>0.0</Minimum>
			<Maximum>1.00001</Maximum>
			<Type>Fixed</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>sigma_m1</Name>
			<Value>6.45</Value>
			<Minimum>0.0</Minimum>
			<Maximum>100.0</Maximum>
			<Type>Free</Type>
			<Unit>MeV/c^{2}</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>ratio_21</Name>
			<Value>2.258</Value>
			<Minimum>1.0</Minimum>
			<Maximum>10.0</Maximum>
			<Type>Fixed</Type>
			<Unit>MeV/c^{2}</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>m_Bs</Name>
			<Value>5300.0</Value>
			<Type>Free</Type>
			<Unit>MeV/c^{2}</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>f_sig_m1b</Name>
			<Value>0.803</Value>
			<Minimum>0.0</Minimum>
			<Maximum>1.00001</Maximum>
			<Type>Fixed</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>sigma_m1b</Name>
			<Value>6.45</Value>
			<Minimum>0.0</Minimum>
			<Maximum>100.0</Maximum>
			<Type>Free</Type>
			<Unit>MeV/c^{2}</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>m_Bsb</Name>
			<Value>5400.0</Value>
			<Type>Free</Type>
			<Unit>MeV/c^{2}</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>f_sig_m1c</Name>
			<Value>0.803</Value>
			<Minimum>0.0</Minimum>
			<Maximum>1.00001</Maximum>
			<Type>Fixed</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>sigma_m1c</Name>
			<Value>6.45</Value>
			<Minimum>0.0</Minimum>
			<Maximum>100.0</Maximum>
			<Type>Free</Type>
			<Unit>MeV/c^{2}</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>m_Bsc</Name>
			<Value>5500.0</Value>
			<Type>Free</Type>
			<Unit>MeV/c^{2}</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>f_sig_m1d</Name>
			<Value>0.803</Value>
			<Minimum>0.0</Minimum>
			<Maximum>1.00001</Maximum>
			<Type>Fixed</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>sigma_m1d</Name>
			<Value>6.45</Value>
			<Minimum>0.0</Minimum>
			<Maximum>100.0</Maximum>
			<Type>Free</Type>
			<Unit>MeV/c^{2}</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>m_Bsd</Name>
			<Value>5600</Value>
			<Type>Free</Type>
			<Unit>MeV/c^{2}</Unit>
		</PhysicsParameter>

	</ParameterSet>


	//==========================================
	// Specify which minimiser to use.

	<Minimiser>
		<MinimiserName>Minuit</MinimiserName>
		<MaxSteps>100000</MaxSteps>
		<GradTolerance>0.0001</GradTolerance>
		<Quality>1</Quality>
	</Minimiser>

	<FitFunction>
		<FunctionName>NegativeLogLikelihoodThreaded</FunctionName>
		<Threads>10</Threads>
		#<Strategy>Petes</Strategy>
		#<SetIntegratorTest>False</SetIntegratorTest>
	</FitFunction>


	<NumberRepeats>50</NumberRepeats>

	<CommonPDF>
		<NormalisedSumPDF>
			<FractionName>Fraction1</FractionName>
			<PDF>
				<Name>BsMass</Name>
				<ConfigurationParameter>PlotComponents:True</ConfigurationParameter>
			</PDF>
			<NormalisedSumPDF>
				<FractionName>Fraction2</FractionName>
				<PDF>
					<Name>BsMass</Name>
					<ParameterSubstitution>f_sig_m1:f_sig_m1b</ParameterSubstitution>
					<ParameterSubstitution>sigma_m1:sigma_m1b</ParameterSubstitution>
					<ParameterSubstitution>m_Bs:m_Bsb</ParameterSubstitution>
				</PDF>
				<NormalisedSumPDF>
					<FractionName>Fraction3</FractionName>
					<PDF>
						<Name>BsMass</Name>
						<ParameterSubstitution>f_sig_m1:f_sig_m1c</ParameterSubstitution>
						<ParameterSubstitution>sigma_m1:sigma_m1c</ParameterSubstitution>
						<ParameterSubstitution>m_Bs:m_Bsc</ParameterSubstitution>
						<ConfigurationParameter>PlotComponents:True</ConfigurationParameter>
					</PDF>
					<PDF>
						<Name>BsMass</Name>
						<ParameterSubstitution>f_sig_m1:f_sig_m1d</ParameterSubstitution>
						<ParameterSubstitution>sigma_m1:sigma_m1d</ParameterSubstitution>
						<ParameterSubstitution>m_Bs:m_Bsd</ParameterSubstitution>
						<Label>MYPDF</Label>
					</PDF>
				</NormalisedSumPDF>
			</NormalisedSumPDF>
			<Label>MainPDF</Label>
		</NormalisedSumPDF>
	</CommonPDF>


	<ToFit>

		<CommonPDF>True</CommonPDF>

		#<PDFConfigurator>
		#	<FractionName>Fraction1</FractionName>
		#	<FractionName>Fraction2</FractionName>
		#	<FractionName>Fraction3</FractionName>
		#</PDFConfigurator>

		<DataSet>
			<Source>Foam</Source>
			<FileName>output.root</FileName>
			<NumberEvents>1000</NumberEvents>

			<PhaseSpaceBoundary>
				<Observable>
					<Name>mass</Name>
					<Minimum>5200.0</Minimum>
					<Maximum>5700.0</Maximum>
					<Unit>MeV/c^{2}</Unit>
				</Observable>
			</PhaseSpaceBoundary>
		</DataSet>
	</ToFit>


	<Output>
		#<Projection>mass</Projection>
		<ComponentProjection>
			<Name>mass</Name>
			<DataBins>256</DataBins>
			<PDFpoints>1024</PDFpoints>
			#<LogY>True</LogY>
			<ColorKey>0:2:3:4:6:7:8:9:11</ColorKey>
			#<StyleKey>1:2:3:4:5:6:7:8:9</StyleKey>
			<WidthKey>0:3:3:3:3:3:3:3:3</WidthKey>
			<CalcChi2>True</CalcChi2>
			<DrawPull>True</DrawPull>
			<CalcChi2>True</CalcChi2>
		</ComponentProjection>
		<Scan>
			<Name>Fraction1</Name>
			<Sigma>1</Sigma>
			<Points>5</Points>
		</Scan>
		#<TwoDScan>
		#	<X_Param>
		#		<Name>sigma_m1b</Name>
		#		<Sigma>3</Sigma>
		#		<Points>10</Points>
		#	</X_Param>
		#	<Y_Param>
		#		<Name>sigma_m1</Name>
		#		<Sigma>3</Sigma>
		#		<Points>10</Points>
		#	</Y_Param>
		#</TwoDScan>
	</Output>

</RapidFit>

